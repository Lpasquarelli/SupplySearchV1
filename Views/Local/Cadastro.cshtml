@model Local
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastro de Locais</h1>

@if (Model != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<form asp-action="Cadastrar">
    <div class="form-group">
        <label for="id-Cpf">Cpf</label>
        <input type="text" name="Cpf" class="form-control" id="id-Cpf" />
    </div>
    <div class="form-group">
        <label for="id-RazaoSocial">Razao Social</label>
        <input type="text" name="RazaoSocial" class="form-control" id="id-RazaoSocial" />
    </div>
    <div class="form-group">
        <label for="id-endereco">Endereco</label>
        <input type="text" name="endereco" class="form-control" id="id-endereco" />
    </div>
    <div class="form-group">
        <label for="id-numero">Número</label>
        <input type="text" name="numero" class="form-control" id="id-numero" />
    </div>
    <div class="form-group">
        <label for="id-complemento">Complemento</label>
        <input type="text" name="complemento" class="form-control" id="id-complemento" />
    </div>
    <div class="form-group">
        <label for="id-telefone">Telefone</label>
        <input type="number" name="telefone" class="form-control" id="id-telefone" />
    </div>
    <div class="form-group">
        <label for="id-Senha">Senha</label>
        <input type="text" name="Senha" class="form-control" id="id-Senha" />
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-outline-success" />
    <a asp-controller="Doador" asp-action="index" class="btn btn-outline-primary"> Voltar</a>
</form>